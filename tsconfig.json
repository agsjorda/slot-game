{
	"compilerOptions": {
		"target": "ES2022",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"types": ["vite/client"],
		"skipLibCheck": true,

		"moduleResolution": "Node",
		"baseUrl": "./src",
		"paths": {
			"@config/*": ["config/*"],
			"@model/*": ["model/*"],
			"@controller/*": ["controller/*"],
			"@view/*": ["view/*"],
			"@scenes/*": ["scenes/*"]
		},

		"verbatimModuleSyntax": false,
		"noEmit": true,

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
